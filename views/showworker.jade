doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='icon', type='image/png', href='/assets/img/favicon.ico')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Light Bootstrap Dashboard by Creative Tim
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')
    // Bootstrap core CSS
    link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
    // Animation library for notifications
    link(href='/assets/css/animate.min.css', rel='stylesheet')
    // Light Bootstrap Table core CSS
    link(href='/assets/css/light-bootstrap-dashboard.css?v=1.4.0', rel='stylesheet')
    // CSS for Demo Purpose, don't include it in your project
    link(href='/assets/css/demo.css', rel='stylesheet')
    // Fonts and icons
    link(href='/assets/css/font.css', rel='stylesheet')
    link(href='/assets/css/r.css', rel='stylesheet', type='text/css')
    link(href='/assets/css/pe-icon-7-stroke.css', rel='stylesheet')
  body
    .wrapper
      .sidebar(data-color='purple', data-image='/assets/img/sidebar-5.jpg')
        //
          Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
          Tip 2: you can also add an image using data-image tag
        .sidebar-wrapper
          .logo
            a.simple-text Retailer Name
          ul.nav
            li
              a(href='/retailer')
                i.pe-7s-graph
                p WELCOME
            li
              a(href='/retailer/adduser')
                i.pe-7s-user
                p Add Worker
            li
              a(href='/retailer/addproduct')
                i.pe-7s-note2
                p Add Products
            li.active
              a(href='/retailer/workers')
                i.pe-7s-user
                p Show Employees
      .main-panel
        nav.navbar.navbar-default.navbar-fixed
          .container-fluid
            .navbar-header
              a.navbar-brand(href='#') Your Area :)
            .collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='')
                    p Account
                li
                  a(href='/retailer/logout')
                    p Log out
                li.separator.hidden-lg
        .content
          .container-fluid
            .row
              .col-md-12
                .card
                  .header
                    h4.title Workers Details
                    p.category Available Workers
                  .content.table-responsive.table-full-width
                    table.table.table-hover.table-striped
                      thead
                        th Username
                        th First name
                        th Last name
                        th Address
                        th Pincode
                        th City
                        th Country
                        th
                      tbody
                        each user, i in results
                          tr
                            td #{user.username}
                            td #{user.fname}
                            td #{user.lname}
                            td #{user.address}
                            td #{user.pincode}
                            td #{user.city}
                            td #{user.country}
                            td
                                a(href="#", class='btn btn-danger removeUser', data-id="#{user._id}") Delete User
              footer.footer
                .container-fluid
                  nav.pull-left
                    ul
                      li
                        a(href='#') Home
                      li
                        a(href='#') Company
                      li
                        a(href='#') Portfolio
                      li
                        a(href='#') Blog
  // Core JS Files
  script(src='/assets/js/jquery.3.2.1.min.js', type='text/javascript')
  script(src='/assets/js/bootstrap.min.js', type='text/javascript')
  // Charts Plugin
  script(src='/assets/js/chartist.min.js')
  // Notifications Plugin
  script(src='/assets/js/bootstrap-notify.js')
  // Google Maps Plugin
  script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE')
  // Light Bootstrap Table Core javascript and methods for Demo purpose
  script(src='/assets/js/light-bootstrap-dashboard.js?v=1.4.0')
  // Light Bootstrap Table DEMO methods, don't include it in your project!
  script(src='/assets/js/demo.js')
  script(type='text/javascript').
    $(document).ready(function(){
        $('.removeUser').click(function(e){
            deleteId=$(this).data('id');
            $.ajax({
                url:'/retailer/deleteuser/'+deleteId,
                type:'DELETE',
                success:function(){

                }
            });
            window.location = '/retailer/workers'
        });
    });
